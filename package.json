{
  "name": "my-electron-app",
  "version": "1.0.0",
  "description": "Electron app with bundled backend",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "clean": "npm run clean:electron && npm run clean:backend && npm run clean:frontend",
    "clean:electron": "rm -rf dist && rm -rf node_modules && rm -rf backend/public && rm -rf *.snap",
    "clean:backend": "cd backend && npm run clean",
    "clean:frontend": "cd frontend && npm run clean",

    "setup": "npm run setup:electron && npm run setup:backend && npm run setup:frontend",
    "setup:electron": "npm install",
    "setup:backend": "cd backend && npm install",
    "setup:frontend": "cd frontend && npm install",

    "build": "npm run build:frontend && npm run cp-build:frontend && npm run build:electron",
    "build:frontend": "cd frontend && npm run build",
    "cp-build:frontend": "rm -rf backend/public && cp -r frontend/dist backend/public",
    "build:electron": "electron-builder --dir",

    "dev": "concurrently \"npm:dev:frontend\" \"npm:dev:backend\"",
    "dev:frontend": "cd frontend && NODE_ENV=development vite",
    "dev:backend": "NODE_ENV=development node backend/src/server.js",
    "start:electron": "electron .",

    "dist": "npm run prepare:frontend && electron-builder"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "electron-store": "^9.0.0",
    "express": "^4.19.0",
    "get-port": "^7.1.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^38.1.2",
    "electron-builder": "^24.6.0",
    "nodemon": "^3.1.10",
    "vite": "^7.1.7",
    "wait-on": "^8.0.0"
  },
  "build": {
    "asar": true,
    "extraResources": [
      {
        "from": "frontend/dist/",
        "to": "frontend/dist",
        "filter": ["**/*"]
      }
    ],
    "files": [
      "electron/**",
      "package.json"
    ],
    "linux": {
      "target": ["snap"]
    }
  }
}
